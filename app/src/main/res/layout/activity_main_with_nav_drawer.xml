<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_layout"
        app:menu="@menu/mavigation_menu" />

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/navToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <ImageView
            android:id="@+id/ImgIcon"
            android:layout_width="232dp"
            android:layout_height="152dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/starsuckslogo"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/hammersmith_one"
            android:text="@string/order_now"
            android:textColor="@color/starbucks_green"
            android:textSize="30sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Img1"
                    android:layout_width="232dp"
                    android:layout_height="152dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/sb1"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

                <ImageView
                    android:id="@+id/Img2"
                    android:layout_width="232dp"
                    android:layout_height="152dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/sb2"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/Img3"
                    android:layout_width="232dp"
                    android:layout_height="152dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/sb3"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/Img4"
                    android:layout_width="232dp"
                    android:layout_height="152dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/sb4"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/Img5"
                    android:layout_width="232dp"
                    android:layout_height="152dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/sb5"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/Img6"
                    android:layout_width="232dp"
                    android:layout_height="152dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/sb6"
                    tools:ignore="ContentDescription" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>